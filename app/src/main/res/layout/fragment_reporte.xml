<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.fragment.reporte">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lb_consecutivo_reporte"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:layout_weight="0.6"
            android:textSize="@dimen/font_label"
            android:paddingRight="@dimen/padding_left_right_componentes"
            android:text="#"/>

        <TextView
            android:id="@+id/lb_nombrea_reporte"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:layout_weight="3.4"
            android:textSize="@dimen/font_label"
            android:paddingRight="@dimen/padding_left_right_componentes"
            android:text="TRABAJADOR"/>
        <TextView
            android:id="@+id/lb_cajasPrimera_reporte"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:layout_weight="2.333"
            android:textSize="@dimen/font_label"
            android:paddingRight="@dimen/padding_left_right_componentes"
            android:text="PRIMERA"/>

        <TextView
            android:id="@+id/lb_cajasSegunda_reporte"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:layout_weight="2.333"
            android:textSize="@dimen/font_label"
            android:paddingRight="@dimen/padding_left_right_componentes"
            android:text="SEGUNDA"/>

        <TextView
            android:id="@+id/lb_cajasAgranel_reporte"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:layout_weight="1.333"
            android:textSize="@dimen/font_label"
            android:paddingRight="@dimen/padding_left_right_componentes"
            android:text="AGRANEL"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="top"
        android:layout_weight="2"
        android:orientation="vertical">

        <ListView
            android:id="@+id/lv_reporte"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_TotalProduccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@drawable/borde"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:gravity="center|start"
            android:paddingLeft="@dimen/padding_left_right_componentes"
            android:text="PRODUCCION TOTAL"
            android:textColor="@color/colorFont"
            android:textSize="@dimen/font_label_titulo"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">
            <!--<TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:layout_weight="0.6"
                android:textSize="@dimen/font_label"
                android:paddingRight="@dimen/padding_left_right_componentes"
                android:text=""/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:layout_weight="3.4"
                android:textSize="@dimen/font_label"
                android:paddingRight="@dimen/padding_left_right_componentes"
                android:text=""/>-->
            <TextView
                android:id="@+id/tv_total_trabajadores"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:layout_weight="2.333"
                android:textColor="@color/colorFont"
                android:paddingBottom="@dimen/padding_top_bottom_componentes"
                android:textSize="@dimen/font_label"
                android:text="Trabajadores"/>

            <TextView
                android:id="@+id/tv_totalPrimera_reporte"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.333"
                android:gravity="center|left"
                android:textColor="@color/colorFont"
                android:paddingRight="@dimen/padding_left_right_componentes"
                android:paddingBottom="@dimen/padding_top_bottom_componentes"
                android:textSize="@dimen/font_label"
                android:text="0000" />

            <TextView
                android:id="@+id/tv_totalSegunda_reporte"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.333"
                android:gravity="center|left"
                android:textColor="@color/colorFont"
                android:paddingRight="@dimen/padding_left_right_componentes"
                android:paddingBottom="@dimen/padding_top_bottom_componentes"
                android:textSize="@dimen/font_label"
                android:text="0000" />

            <TextView
                android:id="@+id/tv_totalAgranel_reporte"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.333"
                android:textColor="@color/colorFont"
                android:gravity="center|left"
                android:paddingRight="@dimen/padding_left_right_componentes"
                android:paddingBottom="@dimen/padding_top_bottom_componentes"
                android:textSize="@dimen/font_label"
                android:text="0000" />
        </LinearLayout>
    </LinearLayout>





</LinearLayout>